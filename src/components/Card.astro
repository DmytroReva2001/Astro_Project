---
const img = Astro.props.img;
const tema = Astro.props.tema;
const url = Astro.props.url;
---
<a href={url}>
<div class="card">
  <img src={img} alt={tema} />
  <div>
    <h2>{tema}</h2>
  </div>
</div>
</a>

<style>
  .card {
    padding: 1%;
    margin:1%;
    border: 1px solid #ccc;
    border-radius: 10px;
    transition: transform 0.3s;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    background-color: #f0f0f0;
    display: inline-block;
    width: 20%;
    height: 350px;
    text-align: center;
  }

  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
  }

  img {
    width: 100%;
    height: 300px;
    border-radius: 10px 10px 10px 10px;
  }

  h2 {
    color: #333;
    font-size: 23px;
  }

  a
  {
    text-decoration: none;
  }

  @media (max-width: 768px) {
      .card {
        width: 85%;
        margin: 10px
      }
    }
</style>