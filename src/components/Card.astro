---
const img = Astro.props.img; // Obtiene la imagen de las propiedades de Astro
const tema = Astro.props.tema; // Obtiene el tema de las propiedades de Astro
const url = Astro.props.url; // Obtiene la URL de las propiedades de Astro
---
<a href={url}> <!-- Crea un enlace que lleva a la URL especificada -->
  <div class="card"> <!-- Contenedor de la tarjeta -->
    <img src={img} alt={tema} /> <!-- Muestra la imagen con un texto alternativo del tema -->
    <div>
      <h2>{tema}</h2> <!-- Muestra el tema dentro de un encabezado h2 -->
    </div>
  </div>
  </a>

<style> /* Estilos de los elementos */
  .card {
    padding: 1%;
    margin:1%;
    border: 1px solid #ccc;
    border-radius: 10px;
    transition: transform 0.3s;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    background-color: #f0f0f0;
    display: inline-block;
    width: 20%;
    height: 350px;
    text-align: center;
  }

  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
  }

  img {
    width: 100%;
    height: 300px;
    border-radius: 10px 10px 10px 10px;
  }

  h2 {
    color: #333;
    font-size: 23px;
  }

  a {
    text-decoration: none;
  }

  @media (max-width: 768px) {
      .card {
        width: 85%;
        margin: 10px
      }
    }
</style>