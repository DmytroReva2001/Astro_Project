---
import Layout from '../layouts/Layout.astro';

const languages = [
    { name: 'Java', url: 'https://miro.medium.com/v2/resize:fit:2560/1*2XrX0fP0htyTCah7AglTig.jpeg', text: 'Java programming language' },
    { name: 'Python', url: 'https://visionyvalor.es/wp-content/uploads/2024/03/Python-Symbol_0-3.png', text: 'Python programming language' },
    { name: 'PHP', url: 'https://upload.wikimedia.org/wikipedia/commons/thumb/2/27/PHP-logo.svg/640px-PHP-logo.svg.png', text: 'PHP programming language' }
];

languages;
---

<Layout title="Sobre ">
    <main>
        <h1 id="language-title">Sobre</h1>
        <div id="language-content" class="language-content">
            <img id="language-image" src="" alt="Language Image" class="language-image">
            <p id="language-text"></p>
        </div>
        <a href="/">Volver</a>
    </main>
</Layout>

<script define:vars={{ languages }}>
    document.addEventListener('DOMContentLoaded', () => {
        const urlParams = new URLSearchParams(window.location.search);
        const item = urlParams.get('item');

        const language = languages.find(lang => lang.name === item);

        if (language) {
            // Actualizar el t√≠tulo
            document.title = `Sobre ${language.name}`;
            document.getElementById('language-title').textContent = `Sobre ${language.name}`;

            // Actualizar la imagen
            const imgElement = document.getElementById('language-image');
            if (imgElement) {
                imgElement.src = language.url;
                imgElement.alt = `${language.name} logo`;
            }

            // Actualizar el texto
            const textElement = document.getElementById('language-text');
            if (textElement) {
                textElement.textContent = language.text;
            }
        } else {
            document.getElementById('language-content').textContent = 'Lenguaje desconocido';
        }
    });
</script>

<style>
    main {
        margin: auto;
        padding: 1rem;
        width: 800px;
        max-width: calc(100% - 2rem);
        color: white;
        font-size: 20px;
        line-height: 1.6;
    }
    .language-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 2rem;
    }
    .language-image {
        max-width: 300px;
        margin-bottom: 1rem;
    }
</style>